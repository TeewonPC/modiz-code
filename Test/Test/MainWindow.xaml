<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="小游戏" Height="600" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="Canvas">
            <TextBlock x:Name="Blood" Text="{Binding Path=blood}"></TextBlock>
            <Image x:Name="pigImage" Source="/Images/Pig.png" Canvas.Top="0" Visibility="Collapsed"></Image>
            <Image x:Name="snakeImage" Source="/Images/Snake.png" Canvas.Top="0" Visibility="Collapsed"></Image>
            <Image x:Name="crabImage" Source="/Images/Crab.png" Canvas.Top="0" Visibility="Collapsed"></Image>
            <Image x:Name="birdImage" Source="/Images/Bird.png" Canvas.Top="0" Visibility="Collapsed"></Image>
        </Canvas>
    </Grid>
</Window>